<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/txt_error_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="37dp"
        android:ellipsize="none"
        android:foregroundGravity="center"
        android:gravity="start"
        android:paddingStart="5sp"
        android:paddingEnd="5sp"
        android:scrollHorizontally="false"
        android:text="Error Text"
        app:layout_constraintStart_toEndOf="@+id/txt_lable_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_wrapBehaviorInParent="horizontal_only" />

    <TextView
        android:id="@+id/txt_lable_error_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="start"
        android:text="Code"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/txt_lable_date"
        app:layout_constraintTop_toBottomOf="@+id/txt_lable_date" />

    <TextView
        android:id="@+id/txt_lable_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="37dp"
        android:gravity="start"
        android:text="Error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_error_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:gravity="start"
        android:text="Error Date"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/txt_error_text"
        app:layout_constraintTop_toBottomOf="@+id/txt_error_text" />

    <TextView
        android:id="@+id/txt_lable_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="5sp"
        android:text="Timestamp"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_error_date"
        app:layout_constraintStart_toStartOf="@+id/txt_lable_error_text" />

    <TextView
        android:id="@+id/txt_error_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="Error Code"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/txt_error_date"
        app:layout_constraintTop_toBottomOf="@+id/txt_error_date" />

    <TextView
        android:id="@+id/txt_user_advise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="41dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_lable_error_code" />

</androidx.constraintlayout.widget.ConstraintLayout>